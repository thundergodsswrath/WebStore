@model List<Product> 

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="Upsert">Add new product <i class="bi bi-plus-square"></i></a>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Developer</th>
            <th>Category</th>
        </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/product.js"></script>
}